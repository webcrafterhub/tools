// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url       = env("MONGO_DB_STRING") // uses connection pooling
}

model Form {
  id          String @id @default(auto()) @map("_id") @db.ObjectId
  userId      String
  createdAt   DateTime @default(now())
  published   Boolean  @default(false)
  name        String
  description String   @default("")
  content     String   @default("[]")

  visits      Int @default(0)
  submissions Int @default(0)

  shareURL        String            @unique @default(uuid())
  FormSubmissions FormSubmissions[]

  @@unique([name, userId])
}

model FormSubmissions {
  id        String @id @default(auto()) @map("_id") @db.ObjectId
  createdAt DateTime @default(now())
  formId    String
  form      Form     @relation(fields: [formId], references: [id])

  content String
}

model User {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  name String?
  email String @unique
  phoneNumber String?
  companyName String?
  picture String?
  role UserRole @default(USER)
  password String?
  emailVerified Boolean @default(false)
  subscriptionType SubscriptionPlan @default(BASIC)
  subscriptionEndDate DateTime?
  passwordChangedAt DateTime @default(now())
  accountStatus AccountStatus @default(ACTIVE)
  creationTimestamp DateTime @default(now())
  lastLoginTimestamp DateTime @default(now())
  provider String @default("OAUTH2")
}

enum UserRole {
  ADMIN
  USER
}

enum SubscriptionPlan {
  BASIC
  PREMIUM

}

enum AccountStatus {
  ACTIVE
  INACTIVE
  SUSPENDED
}



